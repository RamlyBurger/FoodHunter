@push('scripts')
<script>
    // Quantity controls for all cart items
    document.querySelectorAll('.quantity-selector').forEach(selector => {
        const decreaseBtn = selector.querySelector('.btn-decrease');
        const increaseBtn = selector.querySelector('.btn-increase');
        const input = selector.querySelector('input');
        
        decreaseBtn.addEventListener('click', function() {
            if (input.value > 1) {
                input.value = parseInt(input.value) - 1;
                updateCartTotal();
            }
        });
        
        increaseBtn.addEventListener('click', function() {
            if (input.value < 10) {
                input.value = parseInt(input.value) + 1;
                updateCartTotal();
            }
        });
    });
    
    function updateCartTotal() {
        // Calculate and update cart total (placeholder)
        console.log('Cart total updated');
    }
    
    // Remove item
    document.querySelectorAll('.cart-item .btn-outline-danger').forEach(btn => {
        btn.addEventListener('click', function() {
            if (confirm('Remove this item from cart?')) {
                this.closest('.cart-item').remove();
                updateCartTotal();
            }
        });
    });
</script>
@endpush
